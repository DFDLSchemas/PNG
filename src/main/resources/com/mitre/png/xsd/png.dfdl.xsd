						<dfdl:assert message="Byte 7 of the signature must be 26"><![CDATA[{ . eq 26 }]]></dfdl:assert>
					</xs:appinfo>
				</xs:annotation>
			</xs:element>
			<xs:element name="Byte8" type="unsignedint8" dfdl:outputValueCalc="{ 10 }">
				<xs:annotation>
